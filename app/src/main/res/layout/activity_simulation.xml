<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Simulation"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView android:id="@+id/lblWinPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="Win (%)"
                    android:textColor="@color/text"/>

                <TextView android:id="@+id/winPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:text=""
                    android:textColor="@color/text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView android:id="@+id/lblTiePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="Tie (%)"
                    android:textColor="@color/text"/>

                <TextView android:id="@+id/tiePercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:text=""
                    android:textColor="@color/text"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView android:id="@+id/lblLossPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="30sp"
                    android:text="Loss (%)"
                    android:textColor="@color/text"/>

                <TextView android:id="@+id/lossPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="50sp"
                    android:text=""
                    android:textColor="@color/text"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">

                <TextView android:id="@+id/lblNumPlayersSim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:layout_gravity="center"
                    android:text="Number of Players"
                    android:textSize="16sp"
                    android:textColor="@color/text"/>

                <TextView android:id="@+id/numPlayersSim"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="4"
                    android:textSize="100sp"
                    android:textColor="@color/text"/>

            </LinearLayout>

            <Button
                android:id="@+id/h1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="36sp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

            <Button
                android:id="@+id/h2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="36sp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/c1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

            <Button
                android:id="@+id/c2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

            <Button
                android:id="@+id/c3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

            <Button
                android:id="@+id/c4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

            <Button
                android:id="@+id/c5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="22sp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:background="@drawable/card_bg"
                android:text=""
                android:onClick="selectCard"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="Reset"
                android:onClick="clear"/>

            <Button
                android:id="@+id/fold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_weight="1"
                android:textSize="30sp"
                android:layout_gravity="center"
                android:text="Folded"
                android:onClick="fold"/>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>